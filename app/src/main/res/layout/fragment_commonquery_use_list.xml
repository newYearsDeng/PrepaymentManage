<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px">
        <TextView
            android:id="@+id/tva_use_list"
            style="@style/fragment_comment_tv"/>
        <TextView
            android:id="@+id/tvb_use_list"
            style="@style/fragment_comment_tv" />
        <TextView
            android:id="@+id/tvc__use_list"
            style="@style/fragment_comment_tv" />
        <TextView
            android:id="@+id/tvd_use_list"
            style="@style/fragment_comment_tv" />
    </LinearLayout>
    <TextView style="@style/myline" />
    <com.andview.refreshview.XRefreshView
        android:id="@+id/xRefreshView_use_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ListView
            android:id="@+id/lv_use_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </com.andview.refreshview.XRefreshView>
</LinearLayout>