<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeef"
    android:orientation="vertical">

    <include layout="@layout/second_title_selected_time" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tva_commonquery"
            style="@style/fragment_comment_tv"/>

        <TextView
            android:id="@+id/tvb_commonquery"
            style="@style/fragment_comment_tv" />

        <TextView
            android:id="@+id/tvc_commonquery"
            style="@style/fragment_comment_tv" />

    </LinearLayout>

    <TextView style="@style/myline" />
    <com.andview.refreshview.XRefreshView
        android:id="@+id/xRefreshView_commonquery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        >
        <ListView
            android:id="@+id/lv_commonquery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </com.andview.refreshview.XRefreshView>



</LinearLayout>