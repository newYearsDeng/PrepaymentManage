<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px">

        <TextView
            android:id="@+id/tva_commonquery"
            style="@style/fragment_comment_tv" />

        <TextView
            android:id="@+id/tvb_commonquery"
            style="@style/fragment_comment_tv" />

        <TextView
            android:id="@+id/tvd_commonquery"
            style="@style/fragment_comment_tv"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvc_commonquery"
            style="@style/fragment_comment_tv" />

    </LinearLayout>

    <TextView style="@style/myline" />

    <com.andview.refreshview.XRefreshView
        android:id="@+id/xRefreshView_commonquery"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ListView
            android:id="@+id/lv_commonquery"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.andview.refreshview.XRefreshView>


</merge>