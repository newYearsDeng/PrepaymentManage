<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_gv_item"
    android:orientation="vertical" android:layout_width="250px"
    android:layout_height="250px"
    android:padding="10px"
    android:gravity="center_horizontal">
    <ImageView
        android:id="@+id/iv_checked_gv_item"
        android:layout_width="30px"
        android:layout_height="30px"
        android:src="@drawable/icon_choosed"
        android:layout_alignParentRight="true"
       />
    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_icon_gv_item"
        android:layout_width="150px"
        android:layout_height="150px"
       />
    <TextView
        android:layout_below="@id/iv_icon_gv_item"
        android:id="@+id/tv_room_gv_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000"
        />
    <TextView
        android:layout_below="@+id/tv_room_gv_item"
        android:id="@+id/tv_zt_gv_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#6bc877"
        />

</RelativeLayout>