<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EEEEEF"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_open_door"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginTop="30px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_tvbg_electricitymanagement">

            <ImageView
                android:id="@+id/iv_open_door"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:src="@drawable/icon_open_door" />

            <TextView
                android:id="@+id/tv_open_door"
                style="@style/electricity_text"
                android:layout_toRightOf="@+id/iv_open_door"
                android:text="@string/ycks" />

            <ImageView style="@style/electricity_iv" />
        </RelativeLayout>

        <TextView style="@style/myline" />

        <RelativeLayout
            android:id="@+id/rl_logquery"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_tvbg_electricitymanagement">

            <ImageView
                android:id="@+id/iv_dwsj_cx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:src="@drawable/icon_query_log" />

            <TextView
                android:id="@+id/tv_ydsjcx"
                style="@style/electricity_text"
                android:layout_toRightOf="@id/iv_dwsj_cx"
                android:text="@string/jlcx" />

            <ImageView style="@style/electricity_iv" />
        </RelativeLayout>

        <TextView style="@style/myline" />

        <RelativeLayout
            android:id="@+id/rl_opendoor_warn"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_gravity="center_vertical"

            android:background="@drawable/selector_tvbg_electricitymanagement">

            <ImageView
                android:id="@+id/iv_dw_jk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:src="@drawable/icon_opendoor_warn" />

            <TextView
                android:id="@+id/tv_kmtx"
                style="@style/electricity_text"
                android:layout_toRightOf="@+id/iv_dw_jk"
                android:text="@string/kmtx" />

            <ImageView style="@style/electricity_iv" />
        </RelativeLayout>

        <TextView style="@style/myline" />

        <RelativeLayout
            android:id="@+id/rl_setting"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_tvbg_electricitymanagement">

            <ImageView
                android:id="@+id/iv_dwcb_cx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:src="@drawable/icon_high_setting" />

            <TextView
                android:id="@+id/tv_cbsjcx"
                style="@style/electricity_text"
                android:layout_toRightOf="@+id/iv_dwcb_cx"
                android:text="@string/gjsz" />

            <ImageView style="@style/electricity_iv" />
        </RelativeLayout>

        <TextView style="@style/myline" />


        <RelativeLayout
            android:id="@+id/rl_share_key"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_tvbg_electricitymanagement">

            <ImageView
                android:id="@+id/iv_share_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:src="@drawable/icon_share_keys" />

            <TextView
                android:id="@+id/tv_share_key"
                style="@style/electricity_text"
                android:layout_toRightOf="@+id/iv_share_key"
                android:text="@string/fxys" />

            <ImageView style="@style/electricity_iv" />
        </RelativeLayout>

        <TextView style="@style/myline" />

        <RelativeLayout
            android:id="@+id/rl_device_message"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_tvbg_electricitymanagement">

            <ImageView
                android:id="@+id/iv_device_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:src="@drawable/icon_device_message" />

            <TextView
                android:id="@+id/tv_device_message"
                style="@style/electricity_text"
                android:layout_toRightOf="@+id/iv_device_message"
                android:text="@string/sbxx" />

            <ImageView style="@style/electricity_iv" />
        </RelativeLayout>

        <TextView style="@style/myline" />

    </LinearLayout>
</LinearLayout>